- client_id: {{ '{{ secret "/run/secrets/' + kitchenowl_oidc_client_name + '" | msquote }}' }}
  client_name: "kitchenowl"
  client_secret: {{ '{{ secret "/run/secrets/' + kitchenowl_oidc_client_secret_hash_name + '" | msquote }}' }}
  public: false
  authorization_policy: one_factor
  pre_configured_consent_duration: 1m
  audience: []
  scopes:
    - openid
    - profile
    - email
  redirect_uris:
    - https://{{ kitchenowl_url }}/signin/redirect
    - kitchenowl:/signin/redirect
  response_modes:
  userinfo_signed_response_alg: none
  token_endpoint_auth_method: client_secret_post
